{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "app/*": [
        "./src/*",
        "./dist/*"
      ]
    }
  },
  "lib": [
    "ESNext"
  ],
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    ".idea",
    "node_modules"
  ]
}
